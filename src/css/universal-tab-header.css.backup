}

.plugin-warning.success:hover {
    box-shadow: 0 6px 20px rgba(34, 197, 94, 0.12);
    border-color: rgba(34, 197, 94, 0.3);
}

.plugin-warning.success i {
    color: #22c55e;
    filter: drop-shadow(0 2px 4px rgba(34, 197, 94, 0.3));
}

.plugin-warning.success strong {
    color: #22c55e;
}

/* Error Variant */
.plugin-warning.error {
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.08) 0%, rgba(239, 68, 68, 0.03) 100%);
    border: 1px solid rgba(239, 68, 68, 0.2);
    border-left: 4px solid #ef4444;
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.08);
}

.plugin-warning.error::before {
    background: radial-gradient(circle at 50% 0%, rgba(239, 68, 68, 0.06) 0%, transparent 60%);
}

.plugin-warning.error:hover {
    box-shadow: 0 6px 20px rgba(239, 68, 68, 0.12);
