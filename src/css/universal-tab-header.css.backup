/* Universal Tab Header CSS */

/* CSS Variables */
.tab-header {
    --fallback-primary: #ff6b35;
    --fallback-text-primary: #ffffff;
    --fallback-text-secondary: #b0b0b0;
    --fallback-background-card: #3a3a3c;
    --fallback-border: #444444;
    --fallback-hover: #4f4f52;
}

/* Tab Header Layout */
.tab-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding: 0;
    width: 100%;
    box-sizing: border-box;
}

.tab-header > div:first-child {
    flex: 1;
    min-width: 0;
}

.tab-header > div:last-child {
    display: flex;
    gap: 10px;
    flex-shrink: 0;
}

/* Tab Header Text */
.tab-header h1 {
    margin: 0 0 5px 0;
    color: var(--text-primary, var(--fallback-text-primary));
    font-size: 1.8rem;
    font-weight: 600;
    letter-spacing: 0.3px;
    display: flex;
    align-items: center;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.tab-header h1 i {
    color: var(--primary-color, var(--fallback-primary));
    margin-right: 12px;
    font-size: 1.8rem;
    flex-shrink: 0;
}

.tab-header p {
    margin: 0;
    color: var(--text-secondary, var(--fallback-text-secondary));
    font-size: 1.1rem;
    line-height: 1.5;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

/* Action Buttons */
.action-btn {
    padding: 12px 16px;
    font-size: 1rem;
    background: var(--background-card, var(--fallback-background-card));
    border: 1px solid var(--border-color, var(--fallback-border));
    color: var(--text-primary, var(--fallback-text-primary));
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 44px;
    min-height: 44px;
    box-sizing: border-box;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.action-btn:hover {
    border-color: var(--primary-color, var(--fallback-primary));
    background: var(--hover-color, var(--fallback-hover));
}

.action-btn i {
    color: var(--primary-color, var(--fallback-primary));
    font-size: 1rem;
}

/* Universal Warning/Info Banner System - Modern Theme */
.plugin-warning {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    padding: 20px 24px;
    margin-bottom: 24px;
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.08) 0%, rgba(245, 158, 11, 0.03) 100%);
    border: 1px solid rgba(245, 158, 11, 0.2);
    border-left: 4px solid #f59e0b;
    border-radius: 12px;
    font-family: 'Segoe UI', system-ui, sans-serif;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 12px rgba(245, 158, 11, 0.08);
    backdrop-filter: blur(8px);
    transition: all 0.3s ease;
}

.plugin-warning::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 50% 0%, rgba(245, 158, 11, 0.06) 0%, transparent 60%);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.plugin-warning:hover::before {
    opacity: 1;
}

.plugin-warning:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(245, 158, 11, 0.12);
    border-color: rgba(245, 158, 11, 0.3);
}

.plugin-warning i {
    color: #f59e0b;
    font-size: 1.4rem;
    margin-top: 2px;
    flex-shrink: 0;
    filter: drop-shadow(0 2px 4px rgba(245, 158, 11, 0.3));
    position: relative;
    z-index: 2;
}

.plugin-warning span {
    color: var(--text-primary, #ffffff);
    font-size: 14px;
    line-height: 1.6;
    font-weight: 500;
    position: relative;
    z-index: 2;
}

.plugin-warning strong {
    color: #f59e0b;
    font-weight: 700;
    letter-spacing: 0.2px;
}

/* Info Variant */
.plugin-warning.info {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.08) 0%, rgba(59, 130, 246, 0.03) 100%);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-left: 4px solid #3b82f6;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.08);
}

.plugin-warning.info::before {
    background: radial-gradient(circle at 50% 0%, rgba(59, 130, 246, 0.06) 0%, transparent 60%);
}

.plugin-warning.info:hover {
    box-shadow: 0 6px 20px rgba(59, 130, 246, 0.12);
    border-color: rgba(59, 130, 246, 0.3);
}

.plugin-warning.info i {
    color: #3b82f6;
    filter: drop-shadow(0 2px 4px rgba(59, 130, 246, 0.3));
}

.plugin-warning.info strong {
    color: #3b82f6;
}

