}

.plugin-warning.error strong {
    color: #ef4444;
}

/* Diagnostic Variant (for System Info and technical tabs) */
.plugin-warning.diagnostic {
    background: linear-gradient(135deg, rgba(var(--primary-rgb), 0.08) 0%, rgba(var(--primary-rgb), 0.03) 100%);
    border: 1px solid rgba(var(--primary-rgb), 0.2);
    border-left: 4px solid var(--primary-color);
    box-shadow: 0 4px 12px rgba(var(--primary-rgb), 0.08);
}

.plugin-warning.diagnostic::before {
    background: radial-gradient(circle at 50% 0%, rgba(var(--primary-rgb), 0.06) 0%, transparent 60%);
}

.plugin-warning.diagnostic:hover {
    box-shadow: 0 6px 20px rgba(var(--primary-rgb), 0.12);
    border-color: rgba(var(--primary-rgb), 0.3);
}

.plugin-warning.diagnostic i {
    color: var(--primary-color);
    filter: drop-shadow(0 2px 4px rgba(var(--primary-rgb), 0.3));
}

.plugin-warning.diagnostic strong {
    color: var(--primary-color);
}

/* Security Variant (for sensitive operations) */
.plugin-warning.security {
    background: linear-gradient(135deg, rgba(156, 39, 176, 0.08) 0%, rgba(156, 39, 176, 0.03) 100%);
    border: 1px solid rgba(156, 39, 176, 0.2);
    border-left: 4px solid #9c27b0;
    box-shadow: 0 4px 12px rgba(156, 39, 176, 0.08);
}

.plugin-warning.security::before {
    background: radial-gradient(circle at 50% 0%, rgba(156, 39, 176, 0.06) 0%, transparent 60%);
}

.plugin-warning.security:hover {
    box-shadow: 0 6px 20px rgba(156, 39, 176, 0.12);
    border-color: rgba(156, 39, 176, 0.3);
}

.plugin-warning.security i {
    color: #9c27b0;
    filter: drop-shadow(0 2px 4px rgba(156, 39, 176, 0.3));
}

.plugin-warning.security strong {
    color: #9c27b0;
}

/* Compact Variant */
.plugin-warning.compact {
    padding: 16px 20px;
    margin-bottom: 16px;
    gap: 12px;
}

.plugin-warning.compact i {
    font-size: 1.2rem;
}

.plugin-warning.compact span {
    font-size: 13px;
    line-height: 1.5;
}

/* Responsive Design */
@media (max-width: 768px) {
    .plugin-warning {
        padding: 16px 20px;
        margin-bottom: 20px;
        gap: 14px;
        border-radius: 10px;
    }

    .plugin-warning i {
        font-size: 1.3rem;
    }

    .plugin-warning span {
        font-size: 13px;
        line-height: 1.5;
    }
}

@media (max-width: 480px) {
    .plugin-warning {
        padding: 14px 16px;
        margin-bottom: 16px;
        gap: 12px;
        border-radius: 8px;
    }

    .plugin-warning i {
        font-size: 1.2rem;
    }

    .plugin-warning span {
        font-size: 12px;
        line-height: 1.4;
    }
}

.plugin-warning.info i {
    color: #3b82f6;
}

.plugin-warning.info strong {
    color: #3b82f6;
}

/* Responsive Design */
@media (max-width: 768px) {
    .tab-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
    }

    .tab-header > div:last-child {
        width: 100%;
        justify-content: flex-end;
    }

    .tab-header h1 {
        font-size: 1.5rem;
    }

    .tab-header p {
        font-size: 1rem;
    }
}