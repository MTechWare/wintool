{
  "name": "wintool",
  "version": "0.2.2-wb",
  "main": "src/main.js",
  "description": "WinTool - Windows System Management Tool",
  "author": "MTechWare",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/MTechWare/wintool"
  },
  "bugs": {
    "url": "https://github.com/MTechWare/wintool/issues"
  },
  "homepage": "https://mtechware.github.io/wintool.html",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --win --x64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "io.github.mtechware.wintool",
    "productName": "WinTool",
    "icon": "src/assets/images/icon.ico",
    "copyright": "Copyright Â© 2025 MTechWare",
    "fileAssociations": [],

    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}.${ext}",
      "legalTrademarks": "MTechWare"
    },
    "directories": {
      "output": "dist",
      "buildResources": "src/assets"
    },
    "extraResources": [
      {
        "from": "src/security/security-manifest.json",
        "to": "security-manifest.json"
      },
      {
        "from": "src/scripts",
        "to": "scripts"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "src/scripts/**/*"
    ],
    "compression": "maximum",
    "portable": {
      "artifactName": "${productName}.${ext}"
    },
    "electronLanguages": ["en-US"],
    "files": [
      "src/**/*",
      "!src/**/*.md",
      "!src/**/test/**/*",
      "!src/**/dev/**/*",
      "!src/**/*.log",
      "LICENSE.txt",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/node_modules/**/man/**/*",
      "!**/node_modules/**/docs/**/*",
      "!**/node_modules/**/*.map",
      "!**/node_modules/**/*.ts",
      "!**/node_modules/**/NOTICE*",
      "!**/node_modules/**/HISTORY*",
      "!**/node_modules/**/CHANGES*",
      "!**/node_modules/**/benchmark/**/*",
      "!**/node_modules/**/coverage/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "prettier": "^3.6.2",
    "@types/node": "^22.0.0"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-store": "^10.1.0",
    "extract-zip": "^2.0.1",
    "is-elevated": "^4.0.0"
  },
  "workspaces": [
    "CLI"
  ]
}