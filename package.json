{
  "name": "wintool",
  "version": "0.0.2a",
  "main": "main.js",
  "description": "WinTool - Windows Management and Tweaks",
  "author": "MTech",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "portable": "electron-builder --win portable"
  },
  "build": {
    "icon": "icon.ico",
    "appId": "com.mtechware.wintool",
    "productName": "WinTool",
    "win": {
      "target": [
        "portable"
      ],
      "signAndEditExecutable": false
    },
    "publish": "never",
    "directories": {
      "output": "wintool"
    },
    "files": [
      "main.js",
      "index.html",
      "applications.json",
      "packages.js",
      "package-actions.js",
      "system-info.js",
      "system-commands.js",
      "tweaks.js",
      "preload.js"
    ],
    "asarUnpack": []
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "electron": "^29.0.0",
    "electron-builder": "^24.6.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.4"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "systeminformation": "^5.25.11",
    "winreg": "^1.2.5"
  }
}
