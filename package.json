{
  "name": "wintool",
  "version": "0.2.1w",
  "main": "src/main.js",
  "description": "WinTool - Windows System Management Tool",
  "author": "MTech",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --win --x64"
  },
  "build": {
    "appId": "io.github.mtechware",
    "productName": "WinTool",
    "icon": "src/assets/images/icon.ico",
    "copyright": "Copyright Â© 2025 MTechWare",
    "fileAssociations": [],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WinTool"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "src/assets/images/icon.ico",
      "artifactName": "${productName}.${ext}",
      "requestedExecutionLevel": "asInvoker",
      "legalTrademarks": "MTechWare"
    },
    "directories": {
      "output": "dist",
      "buildResources": "src/assets"
    },
    "files": [
      "src/**/*",
      "!src/**/*.md",
      "!src/**/test/**/*",
      "LICENSE.txt"
    ],
    "extraResources": [
      {
        "from": "src/security/security-manifest.json",
        "to": "security-manifest.json"
      },
      {
        "from": "src/scripts",
        "to": "scripts"
      }
    ],
    "asar": true,
    "compression": "normal",
    "portable": {
      "artifactName": "${productName}.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bindings": "^1.5.0",
    "cors": "^2.8.5",
    "discord-rpc": "^4.0.1",
    "electron-store": "^10.1.0",
    "express": "^5.1.0",
    "extract-zip": "^2.0.1",
    "is-elevated": "^4.0.0",
    "register-scheme": "^0.0.2",
    "systeminformation": "^5.27.7"
  }
}
